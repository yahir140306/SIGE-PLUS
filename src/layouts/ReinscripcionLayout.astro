---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="light" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,0..1&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Public Sans", sans-serif;
      }
      .material-symbols-outlined {
        font-variation-settings:
          "FILL" 0,
          "wght" 400,
          "GRAD" 0,
          "opsz" 24;
      }
    </style>
  </head>
  <body
    class="font-display bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 min-h-screen flex flex-col"
  >
    <!-- Header Institutional UTSH -->
    <header class="bg-white border-b border-slate-200">
      <div
        class="hidden lg:block bg-[#8b1d3d] py-1 text-[10px] text-white font-bold"
      >
        <div
          class="max-w-7xl mx-auto px-4 flex flex-wrap justify-end gap-3 lg:gap-6 uppercase tracking-wider"
        >
          <a
            href="/"
            class="hover:opacity-80 transition-opacity whitespace-nowrap"
            >Inicio</a
          >
          <a
            href="#"
            class="hover:opacity-80 transition-opacity whitespace-nowrap"
            >Oferta Educativa</a
          >
          <a
            href="#"
            class="hover:opacity-80 transition-opacity whitespace-nowrap"
            >Comunicación</a
          >
          <a
            href="#"
            class="hover:opacity-80 transition-opacity whitespace-nowrap"
            >Transparencia</a
          >
          <a
            href="#"
            class="hover:opacity-80 transition-opacity whitespace-nowrap"
            >Normatividad</a
          >
          <a
            href="#"
            class="hover:opacity-80 transition-opacity whitespace-nowrap"
            >Nosotros</a
          >
          <a
            href="#"
            class="hover:opacity-80 transition-opacity whitespace-nowrap"
            >Radio UTSH</a
          >
          <a
            href="#"
            class="hover:opacity-80 transition-opacity whitespace-nowrap"
            >Contacto</a
          >
        </div>
      </div>
      <div
        class="max-w-7xl mx-auto px-3 sm:px-4 py-3 sm:py-4 flex items-center justify-between gap-2 sm:gap-4"
      >
        <a
          href="/"
          class="flex items-center gap-2 sm:gap-3 hover:opacity-80 transition-opacity min-w-0 flex-1"
        >
          <div class="bg-slate-100 p-1.5 sm:p-2 rounded flex-shrink-0">
            <span
              class="material-symbols-outlined text-[#8b1d3d] text-xl sm:text-2xl"
              >school</span
            >
          </div>
          <div class="min-w-0">
            <h1
              class="text-sm sm:text-base lg:text-lg font-black text-slate-800 leading-none truncate"
            >
              UNIVERSIDAD TECNOLÓGICA
            </h1>
            <p class="text-[10px] sm:text-xs font-bold text-slate-500 truncate">
              de la Sierra Hidalguense
            </p>
          </div>
        </a>
        <div class="flex items-center gap-2 sm:gap-4 flex-shrink-0">
          <nav class="hidden lg:flex items-center gap-4 lg:gap-6 mr-4 lg:mr-6">
            <a
              class="text-xs font-bold text-slate-600 uppercase hover:text-primary transition-colors whitespace-nowrap"
              href="/">Portal Alumnos</a
            >
            <a
              class="text-xs font-bold text-slate-600 uppercase hover:text-primary transition-colors whitespace-nowrap"
              href="#">Trámites</a
            >
          </nav>
          <button
            class="bg-primary hover:bg-primary/90 text-white px-3 sm:px-4 lg:px-6 py-1.5 sm:py-2 rounded-full text-[10px] sm:text-xs font-black uppercase tracking-wide sm:tracking-widest transition-all whitespace-nowrap"
            ><span class="hidden sm:inline">Cerrar Sesión</span><span
              class="sm:hidden">Salir</span
            ></button
          >
        </div>
      </div>
    </header>

    <slot />

    <!-- Institutional Footer -->
    <footer
      class="bg-[#8b1d3d] text-white py-8 sm:py-12 border-t-4 sm:border-t-8 border-primary/20 mt-auto"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8 items-start mb-8 sm:mb-10"
        >
          <div class="flex flex-col items-center md:items-start">
            <div class="bg-black/20 p-3 sm:p-4 rounded-lg mb-3 sm:mb-4">
              <span class="material-symbols-outlined text-3xl sm:text-4xl"
                >school</span
              >
            </div>
            <p
              class="text-[9px] sm:text-[10px] font-bold text-center md:text-left opacity-80 uppercase leading-relaxed"
            >
              ESTADO LIBRE Y SOBERANO DE HIDALGO<br />UNIVERSIDAD TECNOLÓGICA DE
              LA SIERRA HIDALGUENSE
            </p>
          </div>
          <div class="text-center">
            <h3 class="text-2xl sm:text-3xl font-black mb-1">911</h3>
            <p
              class="text-[9px] sm:text-[10px] font-bold uppercase tracking-widest opacity-80"
            >
              EMERGENCIA
            </p>
            <h3 class="text-2xl sm:text-3xl font-black mt-4 mb-1">089</h3>
            <p
              class="text-[9px] sm:text-[10px] font-bold uppercase tracking-widest opacity-80"
            >
              DENUNCIA ANÓNIMA
            </p>
          </div>
          <div class="text-center">
            <h3 class="text-2xl sm:text-3xl font-black mb-1">070</h3>
            <p
              class="text-[9px] sm:text-[10px] font-bold uppercase tracking-widest opacity-80"
            >
              ATENCIÓN CIUDADANA
            </p>
          </div>
          <div class="text-center md:text-right">
            <h4 class="text-[10px] sm:text-xs font-bold uppercase mb-3 sm:mb-4">
              AVISO DE PRIVACIDAD
            </h4>
            <h4 class="text-[10px] sm:text-xs font-bold uppercase mb-2">
              CONTACTO
            </h4>
            <p
              class="text-[9px] sm:text-[10px] opacity-80 mb-2 leading-relaxed"
            >
              Carretera México Tampico k.m. 100<br />
              Tramo Pachuca - Huejutla, C.P. 43200<br />
              Zacualtipán de Ángeles, Hidalgo, México
            </p>
            <p class="text-xs sm:text-sm font-black">Tel: (774) 74 2 04 70</p>
          </div>
        </div>
        <div
          class="pt-6 sm:pt-8 border-t border-white/10 text-center text-[9px] sm:text-[10px] font-bold opacity-60 uppercase tracking-widest"
        >
          DERECHOS RESERVADOS 2026 © UNIVERSIDAD TECNOLÓGICA DE LA SIERRA
          HIDALGUENSE.
        </div>
      </div>
    </footer>
  </body>
</html>
