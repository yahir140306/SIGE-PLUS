---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="light" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,0..1&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Public Sans", sans-serif;
      }
      .material-symbols-outlined {
        font-variation-settings:
          "FILL" 0,
          "wght" 400,
          "GRAD" 0,
          "opsz" 24;
      }
    </style>
  </head>
  <body
    class="font-display bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 min-h-screen flex flex-col"
  >
    <!-- Header Institutional UTSH -->
    <header class="bg-white border-b border-slate-200">
      <div class="bg-[#8b1d3d] py-1 text-[10px] text-white font-bold">
        <div
          class="max-w-7xl mx-auto px-4 flex justify-end gap-6 uppercase tracking-wider"
        >
          <a href="/">Inicio</a>
          <a href="#">Oferta Educativa</a>
          <a href="#">Comunicación</a>
          <a href="#">Transparencia</a>
          <a href="#">Normatividad</a>
          <a href="#">Nosotros</a>
          <a href="#">Radio UTSH</a>
          <a href="#">Contacto</a>
        </div>
      </div>
      <div
        class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between"
      >
        <a
          href="/"
          class="flex items-center gap-3 hover:opacity-80 transition-opacity"
        >
          <div class="bg-slate-100 p-2 rounded">
            <span class="material-symbols-outlined text-[#8b1d3d] text-2xl"
              >school</span
            >
          </div>
          <div>
            <h1 class="text-lg font-black text-slate-800 leading-none">
              UNIVERSIDAD TECNOLÓGICA
            </h1>
            <p class="text-xs font-bold text-slate-500">
              de la Sierra Hidalguense
            </p>
          </div>
        </a>
        <div class="flex items-center gap-4">
          <nav class="hidden lg:flex items-center gap-6 mr-6">
            <a
              class="text-xs font-bold text-slate-600 uppercase hover:text-primary transition-colors"
              href="/">Portal Alumnos</a
            >
            <a
              class="text-xs font-bold text-slate-600 uppercase hover:text-primary transition-colors"
              href="#">Trámites</a
            >
          </nav>
          <button
            class="bg-primary hover:bg-primary/90 text-white px-6 py-2 rounded-full text-xs font-black uppercase tracking-widest transition-all"
            >Cerrar Sesión</button
          >
        </div>
      </div>
    </header>

    <slot />

    <!-- Institutional Footer -->
    <footer
      class="bg-[#8b1d3d] text-white py-12 border-t-8 border-primary/20 mt-auto"
    >
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 items-start mb-10">
          <div class="flex flex-col items-center md:items-start">
            <div class="bg-black/20 p-4 rounded-lg mb-4">
              <span class="material-symbols-outlined text-4xl">school</span>
            </div>
            <p
              class="text-[10px] font-bold text-center md:text-left opacity-80 uppercase leading-relaxed"
            >
              ESTADO LIBRE Y SOBERANO DE HIDALGO<br />UNIVERSIDAD TECNOLÓGICA DE
              LA SIERRA HIDALGUENSE
            </p>
          </div>
          <div class="text-center">
            <h3 class="text-3xl font-black mb-1">911</h3>
            <p
              class="text-[10px] font-bold uppercase tracking-widest opacity-80"
            >
              EMERGENCIA
            </p>
            <h3 class="text-3xl font-black mt-4 mb-1">089</h3>
            <p
              class="text-[10px] font-bold uppercase tracking-widest opacity-80"
            >
              DENUNCIA ANÓNIMA
            </p>
          </div>
          <div class="text-center">
            <h3 class="text-3xl font-black mb-1">070</h3>
            <p
              class="text-[10px] font-bold uppercase tracking-widest opacity-80"
            >
              ATENCIÓN CIUDADANA
            </p>
          </div>
          <div class="text-right hidden md:block">
            <h4 class="text-xs font-bold uppercase mb-4">
              AVISO DE PRIVACIDAD
            </h4>
            <h4 class="text-xs font-bold uppercase mb-2">CONTACTO</h4>
            <p class="text-[10px] opacity-80 mb-2">
              Carretera México Tampico k.m. 100<br />
              Tramo Pachuca - Huejutla, C.P. 43200<br />
              Zacualtipán de Ángeles, Hidalgo, México
            </p>
            <p class="text-sm font-black">Tel: (774) 74 2 04 70</p>
            <div class="flex justify-end gap-3 mt-4">
              <span class="material-symbols-outlined text-lg">public</span>
              <span class="material-symbols-outlined text-lg"
                >alternate_email</span
              >
              <span class="material-symbols-outlined text-lg"
                >share_location</span
              >
            </div>
          </div>
        </div>
        <div
          class="pt-8 border-t border-white/10 text-center text-[10px] font-bold opacity-60 uppercase tracking-widest"
        >
          DERECHOS RESERVADOS 2026 © UNIVERSIDAD TECNOLÓGICA DE LA SIERRA
          HIDALGUENSE.
        </div>
      </div>
    </footer>
  </body>
</html>
