---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="light" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,0..1&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Public Sans", sans-serif;
      }
      .material-symbols-outlined {
        font-variation-settings:
          "FILL" 0,
          "wght" 400,
          "GRAD" 0,
          "opsz" 24;
      }
    </style>
  </head>
  <body
    class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 min-h-screen flex flex-col"
  >
    <!-- Golden Ribbon Header Decoration -->
    <div class="w-full h-1.5 bg-accent"></div>

    <!-- Top Navigation Bar -->
    <header
      class="bg-white dark:bg-[#2d2d2d] border-b border-slate-200 dark:border-slate-800 sticky top-0 z-50 shadow-sm"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-20">
          <div class="flex items-center gap-4">
            <div class="flex-shrink-0 flex items-center">
              <a href="/" class="flex items-center">
                <img
                  alt="Logo Universidad Tecnológica de la Sierra Hidalguense"
                  class="h-12 w-auto cursor-pointer hover:opacity-80 transition-opacity"
                  src="https://lh3.googleusercontent.com/aida-public/AB6AXuA7Hr_W-aCr_2PAtMOdsbM6VV8FIRyob0l_CKPi-cyE2YG62knHfplm-fHOVXIOkGfCTX1LnZWGrtbZMKbB_pb_x8mIUpKZm9oNiqs7D-sfY6JO5Xhr9s7xp6L7OrGXdMlNFAnlJ-EqScUeFTS1Am-VnI4kT85EC6-w6wiebgQTU9AQnHXsU8OnoNpw8zDjGZ7rfSaNsjfLEtH1pyeN9FhTqTYVZd7X_c1SlGgJdtmAT2tx6bDq0KuU1hm005LhF2xOaEwXFRsoyVKa"
                />
              </a>
            </div>
            <div
              class="hidden md:block border-l border-slate-300 dark:border-slate-600 pl-4"
            >
              <h1
                class="text-primary font-bold text-lg leading-tight uppercase tracking-tight"
              >
                UTSH
              </h1>
              <p
                class="text-[10px] text-slate-500 dark:text-slate-400 uppercase font-semibold"
              >
                Universidad Tecnológica de la Sierra Hidalguense
              </p>
            </div>
          </div>

          <div class="flex items-center gap-6">
            <nav class="hidden md:flex space-x-8">
              <a
                class="text-slate-600 dark:text-slate-300 hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors"
                href="/"
              >
                Portal Aspirantes
              </a>
              <a
                class="text-slate-600 dark:text-slate-300 hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors"
                href="#"
              >
                Oferta Educativa
              </a>
              <a
                class="text-slate-600 dark:text-slate-300 hover:text-primary dark:hover:text-primary text-sm font-medium transition-colors"
                href="#"
              >
                Ayuda
              </a>
            </nav>
            <div class="flex items-center gap-3">
              <button
                class="p-2 text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full transition-colors relative"
              >
                <span class="material-symbols-outlined">notifications</span>
                <span
                  class="absolute top-2 right-2 block h-2 w-2 rounded-full bg-secondary ring-2 ring-white dark:ring-[#2d2d2d]"
                ></span>
              </button>
              <div
                class="h-10 w-10 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center overflow-hidden border-2 border-primary/20"
              >
                <span class="material-symbols-outlined text-slate-400"
                  >person</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <slot />

    <!-- Institutional Footer -->
    <footer
      class="bg-secondary text-white py-12 border-t border-secondary mt-auto"
    >
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          <!-- Col 1: Logo and Slogan -->
          <div>
            <div class="flex items-center gap-3 mb-4">
              <div
                class="bg-primary p-1.5 rounded-lg flex items-center justify-center"
              >
                <span class="material-symbols-outlined text-white">school</span>
              </div>
              <span class="text-xl font-black tracking-tight uppercase"
                >UTSH</span
              >
            </div>
            <p class="text-xs text-white/80 max-w-xs leading-relaxed">
              Misión: Formar profesionistas íntegros con competencias de
              calidad, pertinencia y valores universales.
            </p>
          </div>

          <!-- Col 2: Contact Info -->
          <div class="flex flex-col gap-3">
            <h4 class="text-sm font-bold uppercase tracking-widest mb-2">
              Contacto
            </h4>
            <div class="flex items-center gap-2 text-xs">
              <span class="material-symbols-outlined text-base text-accent"
                >location_on</span
              >
              <span
                >Km. 1.5 Carr. Zacualtipán-Tianguistengo, Zacualtipán de
                Ángeles, Hgo.</span
              >
            </div>
            <div class="flex items-center gap-2 text-xs">
              <span class="material-symbols-outlined text-base text-accent"
                >phone</span
              >
              <span>(774) 742 1121 / 1122</span>
            </div>
            <div class="flex items-center gap-2 text-xs">
              <span class="material-symbols-outlined text-base text-accent"
                >mail</span
              >
              <span>admisiones@utsh.edu.mx</span>
            </div>
          </div>

          <!-- Col 3: Social & Links -->
          <div>
            <h4 class="text-sm font-bold uppercase tracking-widest mb-4">
              Síguenos
            </h4>
            <div class="flex gap-4">
              <a
                class="h-10 w-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-accent transition-all"
                href="#"
              >
                <span
                  class="material-symbols-outlined text-accent hover:text-white"
                  >public</span
                >
              </a>
              <a
                class="h-10 w-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-accent transition-all"
                href="#"
              >
                <span
                  class="material-symbols-outlined text-accent hover:text-white"
                  >share</span
                >
              </a>
              <a
                class="h-10 w-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-accent transition-all"
                href="#"
              >
                <span
                  class="material-symbols-outlined text-accent hover:text-white"
                  >hub</span
                >
              </a>
            </div>
            <p class="mt-6 text-[10px] text-white/60">
              © 2026 UTSH - Universidad Tecnológica de la Sierra Hidalguense.
              Todos los derechos reservados.
            </p>
          </div>
        </div>

        <!-- Final Golden Ribbon at bottom -->
        <div
          class="mt-12 h-1 w-full max-w-sm mx-auto opacity-50 rounded-full bg-white/20"
        >
        </div>
      </div>
    </footer>
  </body>
</html>
